function sectionTitleHandler() {
    const sections = document.querySelector('.aside__sections');
    const viewportWidth = window.innerWidth;
    if (viewportWidth <= 740) {
        sections.setAttribute('title', 'Sorry, the block is temporarily unavailable for viewport width under 741px');
    } else {
        sections.removeAttribute('title', 'Sorry, the block is temporarily unavailable for viewport width under 741px');
    }
};

export {sectionTitleHandler};